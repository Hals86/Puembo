---
import "../styles/global.css";

// Configuration
const SITE_TITLE = "Oficinas Comerciales de Lujo en Puembo | Venta y Alquiler";
const SITE_DESCRIPTION =
    "Exclusivas oficinas, consultorios y locales comerciales en Puembo, Quito. Ubicación estratégica, diseño moderno y alta plusvalía. ¡Agenda tu visita!";
const SITE_URL = "https://landing-locales.netlify.app"; // Placeholder URL
const GOOGLE_MAPS_API_KEY = "YOUR_GOOGLE_MAPS_API_KEY"; // TODO: Replace with your actual Google Maps API Key
const GA_MEASUREMENT_ID = "GA_MEASUREMENT_ID";
const META_PIXEL_ID = "META_PIXEL_ID";
const TIKTOK_PIXEL_ID = "TIKTOK_PIXEL_ID";
const WHATSAPP_LINK = "https://wa.me/593999999999"; // Placeholder WhatsApp

const schema = {
    "@context": "https://schema.org",
    "@type": "RealEstateListing",
    name: "Oficinas Comerciales Puembo",
    description: SITE_DESCRIPTION,
    url: SITE_URL,
    address: {
        "@type": "PostalAddress",
        addressLocality: "Puembo",
        addressRegion: "Pichincha",
        addressCountry: "EC",
    },
    geo: {
        "@type": "GeoCoordinates",
        latitude: -0.1772,
        longitude: -78.3666,
    },
    image: [
        `${SITE_URL}/img/ready_picturew.webp`,
        `${SITE_URL}/img/interior.webp`,
    ],
};
---

