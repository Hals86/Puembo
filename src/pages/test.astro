---
import "../styles/global.css";
// We reuse the same layout and styles effectively
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>Form Testing Suite</title>
        <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"
        />
    </head>
    <body class="bg-gray-100 p-8">
        <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Test Control Panel -->
            <div class="lg:col-span-1 space-y-4">
                <div class="bg-white p-6 rounded-xl shadow-lg">
                    <h1 class="text-2xl font-bold mb-4 text-gray-800">
                        游빍 Control Panel
                    </h1>
                    <p class="text-sm text-gray-600 mb-4">
                        Click a test case to autofill the form. Open Console to
                        view debug logs.
                    </p>

                    <div class="space-y-2">
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case1">1. Budget Low (Block)</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case2">2. Budget Mid (Success)</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case3">3. Budget High (Success)</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case4">4. Phone Format</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case5">5. Phone Short (Error)</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case9">9. Special Chars</button
                        >
                        <button
                            class="test-btn w-full text-left px-4 py-2 rounded hover:bg-blue-50 text-sm font-medium border border-gray-200"
                            data-case="case12">12. XSS Attempt</button
                        >
                    </div>

                    <hr class="my-4" />
                    <button
                        id="clear-btn"
                        class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded"
                        >Clear Form</button
                    >
                </div>

                <div
                    class="bg-black text-white p-4 rounded-xl shadow-lg h-60 overflow-y-auto font-mono text-xs"
                >
                    <div class="font-bold border-b border-gray-700 pb-2 mb-2">
                        Console Log Output
                    </div>
                    <div id="log-monitor">Waiting for actions...</div>
                </div>
            </div>

            <!-- The Form (Replicated from index.astro) -->
            <div class="lg:col-span-2">
                <div
                    class="bg-white p-10 rounded-2xl shadow-2xl border border-gray-100"
                >
                    <h2
                        class="text-xl font-bold mb-6 text-center text-gray-400 uppercase tracking-widest"
                    >
                        Test Environment
                    </h2>
                    <form class="space-y-6" method="POST">
                        <div>
                            <label
                                for="company"
                                class="block text-sm font-semibold mb-2 text-gray-900"
                                >Nombre del Negocio</label
                            >
                            <input
                                id="company"
                                name="company"
                                type="text"
                                maxlength="80"
                                minlength="3"
                                required
                                aria-required="true"
                                class="w-full h-12 px-4 rounded-lg border-gray-200 bg-transparent focus:ring-primary focus:border-primary text-gray-900 border"
                                placeholder="Ej. Soluciones Digitales S.A."
                            />
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="business_type"
                                    class="block text-sm font-semibold mb-2 text-gray-900"
                                    >Giro de Negocio</label
                                >
                                <select
                                    id="business_type"
                                    name="business_type"
                                    class="w-full h-12 px-4 rounded-lg border-gray-200 bg-transparent focus:ring-primary focus:border-primary text-gray-900 border"
                                    required
                                >
                                    <option value="" disabled selected
                                        >Selecciona tu giro</option
                                    >
                                    <option value="Alimentos y bebidas"
                                        >Minimarket, Supermercado</option
                                    >
                                    <option
                                        value="Restaurantes, cafeter칤as y bares"
                                        >Restaurantes, cafeter칤as y bares</option
                                    >
                                    <option value="Moda, ropa y accesorios"
                                        >Moda, ropa y accesorios, Calzado,
                                        joyer칤a</option
                                    >
                                    <option
                                        value="Calzado, joyer칤a y marroquiner칤a"
                                        >Mascotas y veterinarias</option
                                    >
                                    <option
                                        value="Belleza, est칠tica y cuidado personal"
                                        >Belleza, est칠tica y cuidado personal</option
                                    >
                                    <option value="Salud y bienestar"
                                        >Salud y bienestar</option
                                    >
                                    <option value="Fitness, deporte y gimnasios"
                                        >Fitness, deporte y gimnasios</option
                                    >
                                    <option
                                        value="Tecnolog칤a, inform치tica y electr칩nica"
                                        >Tecnolog칤a, inform치tica y electr칩nica</option
                                    >
                                    <option value="Comercio minorista general"
                                        >Comercio minorista general</option
                                    >
                                    <option
                                        value="Ferreter칤a, construcci칩n y materiales"
                                        >Ferreter칤a, construcci칩n y materiales</option
                                    >
                                    <option value="Hogar, decoraci칩n y muebles"
                                        >Hogar, decoraci칩n y muebles</option
                                    >
                                    <option value="Automotriz y repuestos"
                                        >Automotriz y repuestos</option
                                    >
                                    <option
                                        value="Papeler칤a, librer칤a y regalos"
                                        >Papeler칤a, librer칤a y regalos</option
                                    >
                                    <option
                                        value="Turismo, hoteles y agencias de viaje"
                                        >Turismo, hoteles y agencias de viaje</option
                                    >
                                    <option
                                        value="Educaci칩n, capacitaci칩n y academias"
                                        >Educaci칩n, capacitaci칩n y academias</option
                                    >
                                    <option
                                        value="Log칤stica, mensajer칤a y courier"
                                        >Log칤stica, mensajer칤a y courier</option
                                    >
                                    <option
                                        value="Servicios profesionales y oficinas"
                                        >Servicios profesionales y oficinas</option
                                    >
                                </select>
                            </div>
                            <div>
                                <label
                                    for="budget"
                                    class="block text-sm font-semibold mb-2 text-gray-900"
                                    >Presupuesto Mensual</label
                                >
                                <select
                                    id="budget"
                                    name="budget"
                                    class="w-full h-12 px-4 rounded-lg border-gray-200 bg-transparent focus:ring-primary focus:border-primary text-gray-900 border"
                                >
                                    <option value="Menor a 550"
                                        >Menor a $550</option
                                    >
                                    <option value="550-700">$550-$700</option>
                                    <option value="Mayor a 1000"
                                        >Mayor a $1000</option
                                    >
                                </select>
                            </div>
                        </div>
                        <div>
                            <label
                                for="whatsapp"
                                class="block text-sm font-semibold mb-2 text-gray-900"
                                >Numero de Contacto</label
                            >
                            <input
                                id="whatsapp"
                                name="whatsapp"
                                type="tel"
                                inputmode="numeric"
                                required
                                aria-required="true"
                                pattern="09[0-9]{8}"
                                minlength="10"
                                maxlength="10"
                                oninput="this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10)"
                                title="Debe empezar con 09 y tener exactamente 10 n칰meros"
                                class="w-full h-12 px-4 rounded-lg border-gray-200 bg-transparent focus:ring-primary focus:border-primary text-gray-900 border"
                                placeholder="0999999999"
                            />
                        </div>
                        <button
                            type="submit"
                            class="w-full h-14 bg-blue-600 text-white text-lg font-bold rounded-xl hover:bg-blue-700 transition-all shadow-lg shadow-blue-600/20"
                            >Agenda tu Visita</button
                        >
                    </form>
                </div>
            </div>
        </div>

        <script>
            import { initFormValidation } from "../scripts/formValidation.js";
            import { fillForm } from "../scripts/formTests.js";

            // Init Logic
            initFormValidation();

            // Test Buttons Binding
            document.querySelectorAll(".test-btn").forEach((btn) => {
                btn.addEventListener("click", (e) => {
                    const caseId = e.target.dataset.case;
                    fillForm(caseId);

                    // Simple log to on-screen monitor
                    const log = document.getElementById("log-monitor");
                    const entry = document.createElement("div");
                    entry.textContent = `> Loaded ${caseId}`;
                    entry.classList.add("text-green-400", "mt-1");
                    log.appendChild(entry);
                });
            });

            document
                .getElementById("clear-btn")
                .addEventListener("click", () => {
                    document.querySelector("form").reset();
                    document.getElementById("log-monitor").innerHTML =
                        "Form cleared.";
                });
        </script>
    </body>
</html>
